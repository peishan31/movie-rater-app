<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activityMain_tvName"/>
    <EditText
            android:id="@+id/main_tbName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activityMain_etName"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activityMain_tvDescription"/>
    <EditText
            android:id="@+id/main_tbDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activityMain_etDescription"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/viewMovie_activityMain_tvLanguage"/>
    <RadioGroup
            android:id="@+id/radioLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_rbEnglish"
                android:text="@string/activityMain_rbEnglish"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_rbChinese"
                android:text="@string/activityMain_rbChinese"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_rbMalay"
                android:text="@string/activityMain_rbMalay"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_rbTamil"
                android:text="@string/activityMain_rbTamil"/>
    </RadioGroup>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/viewMovie_activityMain_tvReleaseDate"/>
    <EditText
            android:id="@+id/main_tbReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="@string/activityMain_etReleaseDate"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activityMain_chkNotSuitableForAudience"
                android:id="@+id/main_chkNotSuitableForAudience"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activityMain_chkViolence"
                android:id="@+id/main_chkViolence"
                android:layout_below="@id/main_chkNotSuitableForAudience"
                android:visibility="gone"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activityMain_chkLanguage"
                android:id="@+id/main_chkLanguage"
                android:layout_toRightOf="@id/main_chkNotSuitableForAudience"
                android:layout_below="@id/main_chkNotSuitableForAudience"
                android:visibility="gone"/>

    </RelativeLayout>
    <!--<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activityMain_btnAddMovie"
                android:layout_centerInParent="true"
                android:onClick="btnAddMovie"/>
    </RelativeLayout>-->
</LinearLayout>